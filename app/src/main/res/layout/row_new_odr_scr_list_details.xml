<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:background="@drawable/shape_cursor_two"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_row_new_odr_scr_dtls_order_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Order ID"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorPrimary"
                android:gravity="center|start" />

            <TextView
                android:id="@+id/tv_row_new_odr_scr_dtls_order_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Date"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/tv_row_new_ord_scr_list_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/ic_registered_shop_sync"
                android:contentDescription="@null"
                android:visibility="gone"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/tv_row_new_odr_scr_dtls_order_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Name"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/tv_row_new_odr_scr_dtls_order_shop_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Address"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_11sdp"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <Button
                android:id="@+id/btn_row_new_odr_scr_dtls_view_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/shape_custom_border_blue_button"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="View Details"
                android:textColor="@color/white"
                android:textAllCaps="false"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>