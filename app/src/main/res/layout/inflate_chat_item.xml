<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_10sdp">

    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/tv_system_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dummy_text"
        android:layout_gravity="center"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/login_txt_color"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/fl_user_msg"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="left">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/rounded_top_right_bottom_corner_blue_bg">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_user_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/white"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_user_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.00 PM"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_my_msg"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:background="@drawable/rounded_top_left_bottom_corner_gray_bg">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_my_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_text"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_my_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/_3sdp"
                android:textStyle="bold"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_my_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:47 AM"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_12sdp" />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>