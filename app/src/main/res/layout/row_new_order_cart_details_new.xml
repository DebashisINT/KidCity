<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_3sdp"
            android:paddingEnd="@dimen/_3sdp"
            android:background="@drawable/shape_custom_border_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_3sdp"
                android:paddingTop="@dimen/_7sdp"
                android:paddingBottom="@dimen/_7sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Product :  "
                    android:gravity="top"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/default_text_color"/>

                <TextView
                    android:id="@+id/tv_row_new_order_product_name_new"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Product Name"
                    android:gravity="top|start"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="end">


                    <TextView
                        android:id="@+id/tv_rownew_ord_cart_dtls_gender_or_productType"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Gender : "
                        android:gravity="top|start"
                        android:textColor="@color/default_text_color"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"/>

                    <TextView
                        android:id="@+id/tv_row_new_order_gender_new"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Gender"
                        android:gravity="top|end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_frag_new_ord_rate_dtls_root"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rate  ( ₹ ) :  "
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/default_text_color"/>

                <TextView
                    android:id="@+id/tv_row_new_order_rate_new"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Rate"
                    android:gravity="center|start"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Total Rate  ( ₹ ) :  "
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:textColor="@color/default_text_color"/>

                <TextView
                    android:id="@+id/tv_row_new_order_total_rate_new"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="TotalRate"
                    android:gravity="center|start"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color_details_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


    </LinearLayout>

</androidx.cardview.widget.CardView>