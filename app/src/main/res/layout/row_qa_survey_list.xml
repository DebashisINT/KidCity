<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    app:cardBackgroundColor="@color/color_silver_light"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_row_survey_qa_list_yes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_cursor_one"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/survey_question_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:text="1.How are you?"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>


</androidx.cardview.widget.CardView>