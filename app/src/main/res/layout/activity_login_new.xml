                </LinearLayout>

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_internet_info"
                    android:layout_width="@dimen/_265sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_LL"
                    android:padding="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/icon_internet"
                    android:text="@string/login_logout_msg"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/color_deep_blue" />

                <ImageView
                    android:id="@+id/icon_internet"
                    android:src="@drawable/ic_info_interenet"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_below="@+id/login_LL"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_height="@dimen/_25sdp"/>



            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/version_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="bottom"
        android:text="@string/version_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:visibility="visible" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="@color/default_text_color"
        wheel:matProg_progressIndeterminate="true" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/alert_snack_bar"
