<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="#F1F0F0"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/_35sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/from_date_dist_wise_order_view_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:hint="05-07-22"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_10sdp" />


        <TextView
            android:id="@+id/to_date_dist_wise_order_view_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:hint="05-07-22"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_10sdp" />

        <Space
            android:layout_width="@dimen/_3sdp"
            android:layout_height="match_parent" />


        <TextView
            android:id="@+id/select_dd_dist_wise_order_view_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:hint="Selected DD"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_10sdp"/>

        <Space
            android:layout_width="@dimen/_3sdp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/select_pp_dist_wise_order_view_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:hint="Selected PP"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_10sdp"/>

        <Space
            android:layout_width="@dimen/_3sdp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/generated_dt_dist_wise_order_view_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:hint="05-07-22T12:20:20"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/_10sdp"/>




    </LinearLayout>


</androidx.cardview.widget.CardView>