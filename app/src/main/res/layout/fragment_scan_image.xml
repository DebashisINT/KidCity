<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_scan_image_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_alignParentBottom="true">

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/selector_blue_botton_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_10sdp"
            android:text="@string/scan_visiting_card"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"
            android:gravity="center"/>

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_copy_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/selector_blue_botton_bg"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/_10sdp"
            android:text="@string/scan_copy_visiting_card"
            android:textColor="@color/white"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_10sdp"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>