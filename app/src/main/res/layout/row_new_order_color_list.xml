<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_3sdp">

        <LinearLayout
            android:id="@+id/ll_roow_new_order_color_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_1sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_row_new_order_col_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Color     :  "
                    android:textColor="@color/default_text_color"
                    android:gravity="center|start"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/tv_row_new_order_color_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint=""
                    android:textColor="@color/black"
                    android:gravity="center|start"
                    android:textSize="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_5sdp"/>




            </LinearLayout>

            <ImageView
                android:id="@+id/iv_row_new_order_color_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete"
                android:tint="@color/red" />

        </LinearLayout>





        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_color_details_size_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

</androidx.cardview.widget.CardView>