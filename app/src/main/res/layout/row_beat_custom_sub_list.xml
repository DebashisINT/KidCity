<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_2sdp">


    <LinearLayout
        android:id="@+id/ll_row_beat_custom_bub_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="@dimen/_25sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_cursor_five">

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_shop_name_row_beat_cus_sublist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Shop Name "
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/login_txt_color"
            android:textSize="@dimen/_12sdp" />

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_status_row_beat_cus_sublist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Status"
            android:layout_weight="1.3"
            android:gravity="center"
            android:textColor="@color/login_txt_color"
            android:textSize="@dimen/_12sdp" />

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_visit_time_row_beat_cus_sublist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Time"
            android:gravity="center"
            android:layout_weight="1.3"
            android:textColor="@color/login_txt_color"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>