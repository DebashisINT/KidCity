            <ImageView
                android:id="@+id/iv_filter_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_dashboard_filter_icon"
                android:contentDescription="@null"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rl_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_10sdp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_delete_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:src="@drawable/ic_cart_icon" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_cart_count"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_8sdp"
                    android:text="0"
                    android:layout_alignRight="@+id/iv_delete_icon"
                    android:layout_alignTop="@+id/iv_delete_icon"
                    android:textStyle="bold"
                    android:background="@drawable/red_circle"/>
            </RelativeLayout>

        </LinearLayout>



        <RelativeLayout
            android:id="@+id/rl_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:visibility="gone"
            android:background="@drawable/rounded_corner_cyan_bg">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                android:padding="@dimen/_10sdp"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ll_home_bell"
            android:contentDescription="@null"
            app:srcCompat="@drawable/ic_action_search_white"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_list_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_list_of_party"
            android:layout_toLeftOf="@id/iv_search_icon"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:contentDescription="@null"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/iv_sync_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_search_icon"
            android:src="@drawable/ic_header_reload_icon"
            android:visibility="gone"/>

