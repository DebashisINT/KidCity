        <LinearLayout
            android:id="@+id/ll_home_bell"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/_10sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_map"
                android:visibility="gone"
                android:padding="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_settings"
                android:visibility="gone"
                android:padding="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_chat_bot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_bot"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_cancel_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_exit"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_event_note"
                android:visibility="gone"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_people_white"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_scanner"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_view_list"
                android:padding="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_header_home_icon_top"
                android:visibility="visible"
                android:contentDescription="@null"/>



