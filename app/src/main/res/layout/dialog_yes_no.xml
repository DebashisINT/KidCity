<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardBackgroundColor="@color/transparent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_corner_white_bg">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_logo"
            android:layout_gravity="center|start"
            android:layout_marginLeft="@dimen/_5sdp"/>

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/dialog_yes_no_headerTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"/>


        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/dialog_cancel_order_header_TV"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:text="Do you want to go back ?"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            android:paddingStart="@dimen/_3sdp"
            android:paddingEnd="@dimen/_3sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@drawable/gradient_bottom"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_dialog_yes_no_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="No"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/selector_order_history_bg"
                android:textColor="@drawable/selector_text_clor_blue_white"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="#f8424e"
                android:layout_marginRight="@dimen/_1sdp"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_dialog_yes_no_yes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Yes"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:backgroundTint="#57a518"
                android:background="@drawable/selector_order_history_bg"
                android:textColor="@drawable/selector_text_clor_blue_white"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="@dimen/_1sdp"/>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>