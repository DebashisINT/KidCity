<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_doc_file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/login_txt_color"
            android:textSize="@dimen/_11sdp"
            android:visibility="gone" />

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_doc_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/login_txt_color"
            android:textSize="@dimen/_11sdp" />

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_attachment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="@dimen/_5sdp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="@dimen/_11sdp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mid"
        android:weightSum="16"
        android:gravity="end">

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/ic_edit_icon"
            android:textSize="@dimen/_11sdp"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_delete"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_download"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_downloaded" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_share"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            app:srcCompat="@drawable/ic_share" />

        <ImageView
            android:id="@+id/sync_status_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/ic_registered_shop_sync"
            android:textSize="@dimen/_11sdp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/tv_down_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/ic_view_icon"
            android:textSize="@dimen/_11sdp"
            android:visibility="visible" />


    </LinearLayout>


