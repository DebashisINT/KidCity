<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/transparent"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_white_bg"
        android:orientation="vertical"
        android:gravity="center">

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/dialog_adhaar_reg_adhharTV_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:text="Enter Aadhaar for"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:background="@drawable/shape_cursor_two"/>


        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/dialog_adhaar_reg_adhharTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Aadhaar No :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_3sdp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp">

            <com.kcteam.widgets.AppCustomEditText
                android:id="@+id/dialog_adhaar_reg_et_no_et_1"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:singleLine="true"
                android:nextFocusForward="@+id/dialog_adhaar_reg_et_no_et_2"
                android:background="@drawable/shape_cursor_three"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:maxLength="4"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:inputType="number"
                android:textCursorDrawable="@drawable/shape_cursor_white"/>

            <com.kcteam.widgets.AppCustomEditText
                android:id="@+id/dialog_adhaar_reg_et_no_et_2"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:nextFocusForward="@+id/dialog_adhaar_reg_et_no_et_3"
                android:background="@drawable/shape_cursor_three"
                android:gravity="center"
                android:maxLength="4"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:inputType="number"
                android:textCursorDrawable="@drawable/shape_cursor_white"/>

            <com.kcteam.widgets.AppCustomEditText
                android:id="@+id/dialog_adhaar_reg_et_no_et_3"
                android:layout_width="@dimen/_58sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/shape_cursor_three"
                android:gravity="center"
                android:maxLength="4"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:inputType="number"
                android:textCursorDrawable="@drawable/shape_cursor_white"/>


        </LinearLayout>

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/dialog_adhaar_reg_AttachedTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:gravity="start|bottom"
            android:text="Attach Aadhaar Document :"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/dialog_adhaar_reg_supportTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Supported types : .jpeg, .png,  (File size limited to 500kb)"
            android:textColor="@color/color_custom_red"
            android:textSize="@dimen/_8sdp"
            android:paddingStart="@dimen/_10sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">

            <ImageView
                android:id="@+id/tv_dialog_adhaar_reg_iv_camera"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:contentDescription="@null"
                android:src="@drawable/ic_camera_pic"
                android:layout_gravity="center"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_dialog_aadhaar_reg_pic"
                    android:layout_width="@dimen/_100sdp"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/iv_dialog_aadhaar_reg_cancel_pic"
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:src="@drawable/ic_custom_cancel1"
                    android:layout_alignEnd="@+id/iv_dialog_aadhaar_reg_pic"
                    android:visibility="gone"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/tv_dialog_aadhaar_reg_doc"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/tv_dialog_aadhaar_reg_doc_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:linksClickable="true"
                    android:textColor="@color/color_custom_red"
                    android:textSize="@dimen/_8sdp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_dialog_aadhaar_reg_cancel_pic_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancel"
                android:visibility="gone"/>


        </LinearLayout>




        <com.kcteam.widgets.AppCustomEditText
            android:id="@+id/tv_dialog_adhaar_reg_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:background="@android:color/transparent"
            android:hint="@string/feedback"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"
            android:paddingStart="@dimen/_10sdp"/>

        <View
            android:id="@+id/dialog_adhaar_reg_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@color/light_gray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_dialog_adhaar_reg_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_order_history_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@drawable/selector_text_clor_blue_white"
                android:textSize="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:backgroundTint="#f8424e"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_dialog_adhaar_reg_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/selector_order_history_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@drawable/selector_text_clor_blue_white"
                android:textSize="@dimen/_13sdp"
                android:backgroundTint="#57a518"
                android:layout_marginLeft="@dimen/_1sdp"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>