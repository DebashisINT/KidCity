<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_new_login_bg_new3">


    <ImageView
        android:id="@+id/logo_new"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_95sdp"
        android:src="@drawable/breezelogo"
        android:layout_marginTop="@dimen/_170sdp"
        android:layout_centerHorizontal="true" />

    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/Logo_name_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_new"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center|center_horizontal"
        android:text="@string/name_filed_managenent_system"
        android:textColor="#287fb2"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone"
        android:textStyle="bold" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/alert_splash_snack_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="@color/default_text_color"
        wheel:matProg_progressIndeterminate="true" />

</RelativeLayout>