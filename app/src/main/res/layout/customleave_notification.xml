<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/customleave_notification_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imagenotileft"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_logo" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/customleave_notification_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/customleave_notification_tvusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="User"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/customleave_notification_tvleaveType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="Leave Type"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/customleave_notification_tvleaveDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_8sdp"
                android:text="Date"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/customleave_notification_tveditinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_30sdp"
        android:gravity="start|center"
        android:hint="@string/remark"
        android:paddingStart="@dimen/_10sdp"
        android:background="@drawable/blue_line_custom_selected"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_12sdp"
        android:inputType="textMultiLine"
        android:layout_marginTop="@dimen/_5sdp" />

    <LinearLayout
        android:id="@+id/customleave_notification_bottom_layout_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="10.5">

        <TextView
            android:id="@+id/customleave_notification_tvdecline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/color_custom_red"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Decline"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/customleave_notification_tvyes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@color/color_custom_green"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Approved"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>




</LinearLayout>