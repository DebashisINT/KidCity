<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/color_silver"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_30sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_row_new_quot_added_prod_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Product Name"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_10sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/tv_row_new_quot_added_prod_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="Product Color"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:text="Rate/SqFt."
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"
                android:text="\u20B9"
                android:gravity="center"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="@dimen/_3sdp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_row_new_quot_added_prod_rate_sqft"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Rate/SqMtr. : "
                android:gravity="center|start"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:text="Rate/SqMtr. : "
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"
                android:text="\u20B9"
                android:gravity="center"
                android:textColor="@color/black" />

            <Space
                android:layout_width="@dimen/_3sdp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_row_new_quot_added_prod_rate_sqmtr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Rate/SqMtr."
                android:gravity="center|start"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/iv_row_new_quot_edit"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_edit_icon"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>