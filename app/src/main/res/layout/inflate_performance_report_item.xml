<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vikas Kumar Khuranna"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_report_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/report_to"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_report_to_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_report_to"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/tv_report_to"
                    android:text="Ravi Chopra"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp" />

                <ImageView
                    android:id="@+id/iv_call_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@null"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_registered_shop_call_deselect"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@android:color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_visit_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/visit_count"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_visit_count_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_visit_count"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/tv_visit_count"
                    android:text="15"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_order_value_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_visit_count"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/tv_order_value"
                    android:text="@string/order_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_9sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_order_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_visit_count"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:text="\u20B9 4,89,788"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_9sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp">

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_travel_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/travel_in_km"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_travel_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_travel_header"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_toRightOf="@+id/tv_travel_header"
                    android:text="1.00"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_collection_value_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_travel_header"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/tv_collection_value"
                    android:text="@string/collection_value"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_9sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_collection_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_travel_header"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:text="\u20B9 2,01,741"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_9sdp" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>