<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/card_custom_back1"
    app:cardElevation="@dimen/_5sdp"
    android:layout_margin="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/shape_cursor_two">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/new_order_size_qty_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Size  : "
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/_10sdp"
            android:gravity="center|start"/>

        <TextView
            android:id="@+id/tv_new_order_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Size"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:gravity="center|start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Qty  : "
            android:textColor="@color/default_text_color"
            android:textSize="@dimen/_10sdp"
            android:gravity="center|start"/>

        <TextView
            android:id="@+id/tv_new_order_qty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Size"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            android:gravity="center|start"/>

        <ImageView
            android:id="@+id/iv_new_order_del"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>