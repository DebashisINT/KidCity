    <!--        android:textAllCaps="false"-->
    <!--        android:textColor="@android:color/white"-->
    <!--        android:textSize="@dimen/_13sdp"-->
    <!--        android:visibility="visible" />-->

    <RelativeLayout
        android:id="@+id/btn_frag_new_order_screen_add_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/shape_custom_border_blue_button"
        android:paddingRight="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13sdp">

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/_8sdp"
            android:text="Add to cart"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp" />


        <ImageView
            android:id="@+id/iv_delete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/cart"
            android:layout_marginTop="@dimen/_5sdp"
            android:contentDescription="@null"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:src="@drawable/ic_cart_icon" />

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_cart_count"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_alignTop="@+id/iv_delete_icon"
            android:layout_alignRight="@+id/iv_delete_icon"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:text="+"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_8sdp"
            android:textStyle="bold" />


    </RelativeLayout>

    <Button
        android:id="@+id/btn_nextttt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/selected_order_history"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:text="Add to cart"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_13sdp"
        android:visibility="gone" />


</LinearLayout>