<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_silver"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_custom_border_light_curve"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/gender_IV"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:src="@drawable/ic_gender_new_order" />

                        <TextView
                            android:id="@+id/genderTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="Gender"
                            android:textColor="@color/default_text_color"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/shape_cursor"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_new_order_scr_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/shape_custom_border_back"
                        android:orientation="horizontal">

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/genderSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:text="Select Gender"
                            android:textColor="@color/login_txt_color"
                            android:textColorHint="@color/login_txt_color"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:id="@+id/iv_drop_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_gray_down_arrow_icon"
                            android:tint="@color/black"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@color/light_gray"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_custom_border_light_curve"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/product_IV"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:src="@drawable/ic_product_new_order" />


                        <TextView
                            android:id="@+id/ProductTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="Product"
                            android:textColor="@color/default_text_color"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/shape_cursor"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_new_order_scr_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/shape_custom_border_back"
                        android:orientation="horizontal">

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/ProductSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:text="Select Product"
                            android:textColor="@color/login_txt_color"
                            android:textColorHint="@color/login_txt_color"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:id="@+id/iv_drop_down_Product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_gray_down_arrow_icon"
                            android:tint="@color/black"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@color/light_gray"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_custom_border_light_curve"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/color_IV"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:src="@drawable/ic_colour_new_order_gray" />


                        <TextView
                            android:id="@+id/ColorTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="Color"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/shape_cursor"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ll_new_order_scr_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/shape_custom_border_back"
                        android:orientation="horizontal">

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/ColorSpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:text="Select  Color"
                            android:textColor="@color/login_txt_color"
                            android:textColorHint="@color/login_txt_color"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:id="@+id/iv_drop_down_Color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:src="@drawable/ic_gray_down_arrow_icon"
                            android:tint="@color/black"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:background="@color/light_gray"
                android:visibility="gone" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:orientation="horizontal"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">


                    <ImageView
                        android:id="@+id/sizeIcon"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:padding="@dimen/_2sdp"
                        app:tint="@color/dark_gray"
                        android:src="@drawable/ic_size_new_order" />

                    <TextView
                        android:id="@+id/sizeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="Size"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_14sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_cursor"
                        android:visibility="gone" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_order_list_list_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/ic_swipe_new_order_new" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Swipe"
                        android:textColor="@color/default_text_color"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/horr_scroll_v"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginLeft="@dimen/_3sdp">

                    <LinearLayout
                        android:id="@+id/lll_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_order_list_size"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_70sdp"
                    android:nestedScrollingEnabled="true"
                    android:visibility="gone"
                    app:stackFromEnd="true"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:orientation="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_item_new_ord_rate_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:background="@drawable/ic_ind_rupee"
                            android:backgroundTint="@color/tfe_color_accent"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Swipe"
                            android:textColor="@color/default_text_color"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center|start"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp">


                        <EditText
                            android:id="@+id/et_rate_new_ord"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number|numberDecimal"
                            android:gravity="center"
                            android:hint="Rate  ( \u20B9 )"
                            android:maxLength="3"
                            android:textColor="@color/login_txt_color"
                            android:textSize="@dimen/_10sdp"
                            android:background="@drawable/blue_line_custom_selected"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_item_new_ord_stock_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:background="@drawable/ic_stock_deselect"
                            android:backgroundTint="@color/tfe_color_accent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical"
                        android:layout_gravity="center|start"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp">


                        <TextView
                            android:id="@+id/tv_stock_new_ord"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number|numberDecimal"
                            android:gravity="center"
                            android:hint="Stock"
                            android:maxLength="3"
                            android:textColor="@color/login_txt_color"
                            android:textSize="@dimen/_10sdp"
                            android:background="@drawable/blue_line_custom_selected"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </ScrollView>


    <!--    <Button-->
    <!--        android:id="@+id/btn_frag_new_order_screen_add_cart"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="@dimen/_20sdp"-->
    <!--        android:background="@drawable/shape_custom_border_blue_button"-->
