<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/card_custom_back1"
    android:layout_margin="@dimen/_3sdp"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_30sdp"
        android:orientation="horizontal"
        android:background="@drawable/shape_cursor_two">

        <TextView
            android:id="@+id/tv_row_new_ord_scr_list_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Date"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_row_new_ord_scr_list_order_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Order"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"/>



        <LinearLayout
            android:id="@+id/ll_row_new_ord_scr_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@drawable/ic_view_icon" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center">

        <ImageView
            android:id="@+id/tv_row_new_ord_scr_list_sync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/ic_registered_shop_sync"
            android:contentDescription="@null"/>


    </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>