<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_chat_bot_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_silver">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_bot_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_footer"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_10sdp"/>

    <RelativeLayout
        android:id="@+id/rl_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/chat_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_view">

            <LinearLayout
                android:id="@+id/ll_chat_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_attendance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_attendance"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_attendance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/attendance"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:id="@+id/attendance_view"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_visit"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_visit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/visit"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:id="@+id/visit_view"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_help2"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_tips"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tips"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_analytics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_analytics"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_analytics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/analytics"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_reports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_reports"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_reports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reports"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_weather"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/only_weather"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_exit_black"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/ll_yes_no_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_view"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_yes"
                    android:layout_gravity="center_horizontal"/>

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:layout_marginLeft="@dimen/_10sdp"/>

            <LinearLayout
                android:id="@+id/ll_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_no"
                    android:layout_gravity="center_horizontal"/>

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_visit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_view"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="gone">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_total_visit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_visit"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_total_visit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_visit_without_colon"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_timelines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_timeline"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_timelines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/history"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_revisit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_visit"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_revisit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/revisit"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_visit_sync"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_visit"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_visit_sync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/visit_sync"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_help_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_view"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="gone">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_share_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_sharelog"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_share_log"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share_log_only"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_data_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_data_clear"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_data_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/data_clear"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_sync_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_data_sync"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_sync_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sync_data"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_contact_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_reach_us"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_contact_us"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/reach_us"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tips_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_view"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:gravity="center"
            android:visibility="gone">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/ll_login_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_login"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_login_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/login"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_attendance_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_attendance"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_attendance_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/attendance"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_visit_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_visit"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_visit_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/visit"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:id="@+id/visit_tips_view"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray"
                        android:layout_marginLeft="@dimen/_10sdp"/>

                    <LinearLayout
                        android:id="@+id/ll_sales_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_sales"
                            android:layout_gravity="center_horizontal"/>

                        <com.kcteam.widgets.AppCustomTextView
                            android:id="@+id/tv_sales_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sales"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_analytics_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
