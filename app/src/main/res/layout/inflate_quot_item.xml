<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/shop_list_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/nearby_shop_list_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/total_visited_RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:background="@drawable/top_rounded_corner_gray_bg"
            android:padding="@dimen/_5sdp">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/total_v_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:singleLine="true"
                android:text="@string/quot_no"
                android:textColor="@color/login_txt_color"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/total_visited_value_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@id/total_v_TV"
                android:singleLine="true"
                android:text="09178661"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/sync_icon"
                android:singleLine="true"
                android:text="22 Oct, 2018"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/sync_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:src="@drawable/ic_registered_shop_not_sync" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_5sdp"
                android:layout_alignParentRight="true">

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_total_amount_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="@string/quot_amt"
                    android:textColor="@color/login_txt_color"
                    android:textSize="@dimen/_9sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/tv_total_amount_header"
                    android:singleLine="true"
                    android:text="Rs. 3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_details_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/sync_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/myshop_name_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="@string/capital_electronics"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/myshop_address_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sync_RL"
                android:layout_marginBottom="@dimen/_3sdp"
                android:singleLine="true"
                android:text="@string/address_txt"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_11sdp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_7sdp"
            android:paddingTop="@dimen/_5sdp">

            <LinearLayout
                android:id="@+id/call_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/call_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_registered_shop_call_deselect" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/call_tv"
                    gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/phone"
                    android:textColor="@color/login_txt_color"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <View
                android:id="@+id/call_view"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/popup_window_bar_color" />

            <LinearLayout
                android:id="@+id/direction_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/direction_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_registered_shop_direction_deselect" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/direction_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/address"
                    android:textColor="@color/login_txt_color"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <View
                android:id="@+id/direction_view"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/popup_window_bar_color" />

            <LinearLayout
                android:id="@+id/add_sms_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/sms_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_sms" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/sms_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/sms"
                    android:textColor="@color/login_txt_color"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            <View
                android:id="@+id/sms_view"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/popup_window_bar_color" />

            <LinearLayout
                android:id="@+id/add_mail_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/mail_iv"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_email_gray" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/mail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/only_email"
                    android:textColor="@color/login_txt_color"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>