<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardBackgroundColor="#EAE9E9"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/applied_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Applied Date"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/pick_a_date_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_history_calendar_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:text="22-12-2022"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/from_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="From Date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/from_date_show_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="15-01-2022"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp">


                <TextView
                    android:id="@+id/to_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="To Date"
                    android:gravity="center|start"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/to_date_show_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="15-01-2022"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />





            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="@dimen/_30sdp"
            android:paddingStart="@dimen/_10sdp">


            <TextView
                android:id="@+id/leave_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Leave Type : "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/leave_type_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CL"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="@dimen/_30sdp"
            android:paddingStart="@dimen/_10sdp">


            <TextView
                android:id="@+id/leave_remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Remarks : "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/leave_remark_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_row_applied_leave_appr_rej_root"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_height="@dimen/_30sdp">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_message_approved"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_custom_border_green_button"
                android:gravity="center"
                android:text="@string/approved"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />


            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_message_reject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12sdp"
                android:background="@drawable/shape_custom_border_red_button"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/reject"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>


    </LinearLayout>




    </androidx.cardview.widget.CardView>





