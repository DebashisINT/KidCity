<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/shape_cursor_two">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/_30sdp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_dt_row_beat_cus_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="01-08-2022 "
                android:layout_weight="1"
                android:gravity="start|center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/shape_cursor_six" />

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_beat_name_row_beat_cus_list"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Beat Name"
                android:layout_weight="1"
                android:gravity="start|center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sdp"
                android:background="@drawable/shape_cursor_five"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/_25sdp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/shape_cursor_button">

            <com.kcteam.widgets.AppCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Shop Name "
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <com.kcteam.widgets.AppCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Status"
                android:layout_weight="1.3"
                android:gravity="center"
                android:paddingEnd="@dimen/_8sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <com.kcteam.widgets.AppCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Time"
                android:layout_weight="1.3"
                android:paddingEnd="@dimen/_5sdp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_frag_team_sub_beat_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>



</androidx.cardview.widget.CardView>