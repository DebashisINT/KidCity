<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardBackgroundColor="#EAE9E9"
    app:cardElevation="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:paddingStart="@dimen/_10sdp">

            <TextView
                android:id="@+id/applied_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Applied Date"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/pick_a_date_TV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_history_calendar_icon"
                android:drawablePadding="@dimen/_5sdp"
                android:text="22-12-2022"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/from_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="From Date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/from_date_show_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="15-01-2022"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp">


                <TextView
                    android:id="@+id/to_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="To Date"
                    android:gravity="center|start"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/to_date_show_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:text="15-01-2022"
                    android:gravity="center|start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />





            </LinearLayout>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:minHeight="@dimen/_30sdp"
            android:paddingStart="@dimen/_10sdp">


            <TextView
                android:id="@+id/leave_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"
                android:text="Leave Type : "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/leave_type_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"
                android:text="CL"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:minHeight="@dimen/_30sdp"
            android:paddingStart="@dimen/_10sdp">


            <TextView
                android:id="@+id/leave_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"
                android:text="Leave Status : "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/leave_status_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"
                android:text="Approved"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_30sdp"
            android:paddingStart="@dimen/_10sdp"
            android:gravity="center|start">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Reason : "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_leave_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="@dimen/_30sdp"
            android:paddingStart="@dimen/_10sdp">


            <TextView
                android:id="@+id/remark_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Appr. Remark : "
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/remark_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"/>

        </LinearLayout>



    </LinearLayout>




</androidx.cardview.widget.CardView>





