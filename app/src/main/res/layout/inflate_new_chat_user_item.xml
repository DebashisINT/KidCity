<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_profile_picture"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_menu_profile_image"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="@dimen/_2sdp" />

    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:text="Saikat Das"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_13sdp"
        android:layout_toRightOf="@+id/iv_profile_picture"/>

    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="10:45 PM"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_9sdp"
        android:layout_alignTop="@+id/tv_user_name"/>

    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/tv_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:text="Hi"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_10sdp"
        android:layout_alignLeft="@+id/tv_user_name"/>

</RelativeLayout>