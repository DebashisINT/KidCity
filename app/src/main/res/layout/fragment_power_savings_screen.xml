<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_power_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_silver">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"/>

        <com.kcteam.widgets.AppCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/power_off_msg"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center"/>
    </LinearLayout>

    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/tv_power_gps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_80sdp"
        android:layout_marginRight="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/shape_custom_border_blue_button"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Disable Now"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />

</RelativeLayout>