<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#EFEEEE"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp"
    android:layout_margin="@dimen/_3sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_35sdp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/shape_cursor_one">


        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_inf_coll_pendi_list_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="13.000"
            android:textSize="@dimen/_11sdp" />

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_inf_coll_pendi_list_due_amt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="13.000"
            android:textSize="@dimen/_11sdp" />

        <ImageView
            android:id="@+id/iv_inf_coll_pendi_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/ic_view_icon" />


    </LinearLayout>


</androidx.cardview.widget.CardView>