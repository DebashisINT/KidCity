<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_white_bg"
    android:orientation="vertical">


    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_10sdp"
        android:text="Location Permission Instruction"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center"/>

    <ImageView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_350sdp"
        android:layout_below="@+id/tv_body"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/loc_hint" />


    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/tv_ok_loc_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="end"
        android:padding="@dimen/_15sdp"
        android:text="@string/ok"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

</LinearLayout>
