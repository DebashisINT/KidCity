<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nearby_shop_list_bg"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:padding="@dimen/_10sdp">

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/tv_particular_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:text="@string/product_particulars"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_11sdp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.kcteam.widgets.AppCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:text="@string/new_quantity"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <com.kcteam.widgets.AppCustomEditText
                android:id="@+id/et_qty"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="4"
                android:text=""
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

            <com.kcteam.widgets.AppCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:text="@string/new_rate"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:layout_marginLeft="@dimen/_30sdp"/>

            <com.kcteam.widgets.AppCustomEditText
                android:id="@+id/et_rate"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:hint="0.00"
                android:text=""
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>

