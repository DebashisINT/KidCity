<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rcv_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingTop="@dimen/_5sdp">

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/return_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/login_txt_color"
            android:textSize="@dimen/_11sdp"
            android:gravity="center"/>

        <com.kcteam.widgets.AppCustomTextView
            android:id="@+id/return_amount_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/_11sdp" />

        <ImageView
            android:id="@+id/tv_return_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:gravity="center"
            android:src="@drawable/ic_view_icon"
            android:textSize="@dimen/_11sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5">

            <ImageView
                android:id="@+id/location_iv"
                android:layout_width="0dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:src="@drawable/ic_registered_shop_direction_select"
                android:textSize="@dimen/_11sdp"
                android:contentDescription="@null" />

            <ImageView
                android:id="@+id/sync_status_iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:src="@drawable/ic_registered_shop_sync"
                android:textSize="@dimen/_11sdp"
                android:contentDescription="@null"/>
        </LinearLayout>
    </LinearLayout>

    <com.kcteam.widgets.AppCustomTextView
        android:id="@+id/order_noo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:background="@color/lightest_new_gray"
        android:text="Return #"
        android:gravity="center"
        android:padding="@dimen/_3sdp" />

</LinearLayout>