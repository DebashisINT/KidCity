<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/shop_list_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/nearby_shop_list_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/total_visited_RL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:background="@drawable/shape_cursor_one"
            android:padding="@dimen/_5sdp">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/total_v_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Return ID:"
                android:textColor="@color/login_txt_color"
                android:textSize="@dimen/_8sdp"
                android:textStyle="bold"/>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/total_visited_value_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@id/total_v_TV"
                android:singleLine="true"
                android:text="117732509200001"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/location_icon"
                android:singleLine="true"
                android:text="22 Oct, 2018"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp" />


            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/collection_icon"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:src="@drawable/ic_registered_shop_direction_select"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/collection_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/download_icon"
                app:srcCompat="@drawable/ic_collection_blue"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_3sdp"
                android:visibility="gone"
                android:paddingRight="@dimen/_3sdp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/download_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/email_icon"
                app:srcCompat="@drawable/ic_share"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"/>

            <ImageView
                android:id="@+id/email_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/sync_icon"
                android:src="@drawable/ic_email"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_3sdp"
                android:paddingLeft="@dimen/_3sdp"/>

            <ImageView
                android:id="@+id/sync_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:src="@drawable/ic_registered_shop_not_sync" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:visibility="gone">

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/tv_order_date_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:singleLine="true"
                android:text="@string/order_date"
                android:textColor="@color/login_txt_color"
                android:textSize="@dimen/_9sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp">

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_total_item_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="@string/return_items"
                    android:textColor="@color/login_txt_color"
                    android:textSize="@dimen/_9sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_total_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/tv_total_item_header"
                    android:singleLine="true"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/_5sdp"
                android:layout_alignParentRight="true">

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_total_amount_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="@string/new_return_amount"
                    android:textColor="@color/login_txt_color"
                    android:textSize="@dimen/_9sdp" />

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@id/tv_total_amount_header"
                    android:singleLine="true"
                    android:text="Rs. 3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/shop_details_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/sync_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.kcteam.widgets.AppCustomTextView
                    android:id="@+id/myshop_name_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="@string/capital_electronics"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <com.kcteam.widgets.AppCustomTextView
                android:id="@+id/myshop_address_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sync_RL"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="@string/address_txt"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_11sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_create_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myshop_address_TV"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_7sdp"
                app:srcCompat="@drawable/ic_qr_code"/>
        </RelativeLayout>



    </LinearLayout>
</LinearLayout>